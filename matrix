#include<stdio.h>
#include<omp.h>
#include<time.h>

int main(){
 int N=50;
 int A[N][N],B[N][N],C[N][N];

 for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            A[i][j] = i + j;
            B[i][j] = i * j;
            C[i][j] = 0;
        }
    }

    // --- 1. Sequential Multiplication ---
    clock_t start =clock();
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            double sum = 0;
            for (int k = 0; k < N; k++) {
                sum += A[i][k] * B[k][j];
            }
            C[i][j] = sum;
        }
    }
    clock_t end = clock();
    double serial=(double )(end-start)/CLOCKS_PER_SEC;

    prinf("SERIAL TIME USED : %f",serial);
    double st=omp_get_wtime();
    #pragma omp parallel for collapse(2)
        for (int i = 0; i < N; i++) {
            for (int j = 0; j < N; j++) {
                double sum = 0;
                for (int k = 0; k < N; k++) {
                    sum += A[i][k] * B[k][j];
                }
             C[i][j] = sum;
            }
        }
    double et =omp_get_wtime();
    double et = omp_get_wtime();
    printf("PARALLEL TIME USED : %f seconds\n", et - st);

return 0;
}
